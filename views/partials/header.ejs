<header id="top-header">
    <span class="siteName">
        <a href="/" title="Return to home page">CSE Motors</a>
    </span>
    <div>
        <div id="login">
            <a title="Click to log in" href="/account/login">My Account</a>
            <% if (locals.loggedin) { %>
                <script>
                    document.addEventListener("DOMContentLoaded", function() {
                        document.querySelector('#login').style.display = 'none';
                        document.querySelector('#logout a[title="Click to log out"]').hidden = false;
                        document.querySelector('#logout a[title^="Welcome back"]').hidden = false;
                    });
                </script>
            <% } %>
        </div>

        <div id="logout">
            <a title="Welcome back,!" href="/account/profile" hidden>Welcome</a>
            <a title="Click to log out" href="/account/logout" hidden>Logout</a>
        </div>
    </div>

</header>

