<h1><%= title %></h1>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
    <% errors.array().forEach(error => { %>
    <li>‚ùå <%= error.msg %></li>
    <%  }) %>
    </ul>
<% } %>

<div class="account-update">   
    <p>Update your account information below. You can change your name, email, and password.</p>
    
    <form action="/account/update-info/<%= locals.account_id %>" method="POST" id="update-info">
        <label for="firstName">First name</label>
        <input type="text" id="firstName" name="account_firstname" placeholder="Type here" value="<%= locals.account_firstname %>" required/>

        <label for="lastName">Last name</label>
        <input type="text" id="lastName" name="account_lastname" placeholder="Type here" value="<%= locals.account_lastname %>" required />

        <label for="email">Email</label>
        <input type="email" id="email" name="account_email" placeholder="Enter a valid email address" value="<%= locals.account_email %>" required/>

        <button type="submit">Update</button>

        <input type="hidden" name="account_id"
        <% if(locals.account_id) { %> value="<%= locals.account_id %>"
        <% } %>>
    </form>

    <form action="/account/update-password/<%= locals.account_id %>" method="POST" id="update-password">
        <label for="password">New Password (leave blank to keep current)</label>
        <div>The password must be: 
            <ul>
                <li>at least 12 characters</li>
                <li>contain at least 1 number, 1 capital letter and 1 special character</li>
            </ul>
        </div>
        <input type="password" id="password" name="account_password" placeholder="Enter new password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" />

        <button type="submit">Update Password</button>

        <input type="hidden" name="account_id"
        <% if(locals.account_id) { %> value="<%= locals.account_id %>"
        <% } %>>
    </form>

</div>