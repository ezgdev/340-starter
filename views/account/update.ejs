<h1><%= title %></h1>
<div>
    <%- messages() %>

    <% if (errors) { %>
        <ul class="notice">
        <% errors.array().forEach(error => { %>
        <li>‚ùå <%= error.msg %></li>
        <%  }) %>
        </ul>
    <% } %>

    <h2>Update Account Information</h2>   
    
    <form action="/account/update/<%= locals.account_id %>" method="POST" id="update-form">
        <label for="firstName">First name</label>
        <input type="text" id="firstName" name="account_firstname" placeholder="Type here" value="<%= locals.account_firstname %>" required/>

        <label for="lastName">Last name</label>
        <input type="text" id="lastName" name="account_lastname" placeholder="Type here" value="<%= locals.account_lastname %>" required />

        <label for="email">Email</label>
        <input type="email" id="email" name="account_email" placeholder="Enter a valid email address" value="<%= locals.account_email %>" required/>

        <button type="submit">Update</button>

        <input type="hidden" name="account_id"
        <% if(locals.account_id) { %> value="<%= locals.account_id %>"
        <% } %>>
    </form>

    <form action="/account/update/<%= locals.account_id %>" method="POST" id="update-form">
        <label for="password">New Password (leave blank to keep current)</label>
        <input type="password" id="password" name="account_password" placeholder="Enter new password" />

        <button type="submit">Update Password</button>

        <input type="hidden" name="account_id"
        <% if(locals.account_id) { %> value="<%= locals.account_id %>"
        <% } %>>
    </form>

</div>