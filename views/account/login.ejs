
<div>
    <h1><%= title %></h1>
    <%- messages() %>

    <form action="/account/login" method="POST" id="login-form">
        <label for="email">Email:</label>
        <input type="email" id="email" name="account_email" required />

        <label for="password">Password:</label>
        <span>Remember that the password must be at least 12 characters and contain at least 1 number, 1 capital letter and 1 special character</span>
        <input type="password" id="password" name="account_password" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required />

        <button type="submit">Login</button> 
    </form>

    <p>Don't have an account? <a href="/account/register">Sign-up</a>.</p>
</div>  


