<div>
    <h1><%= title %></h1>

    <%- messages() %>

    <% if (errors) { %>
        <ul class="notice">
        <% errors.array().forEach(error => { %>
        <li>❌ <%= error.msg %></li>
        <%  }) %>
        </ul>
    <% } %>

    <form action="/account/register" method="POST" id="register-form">
        <label for="firstName">First name</label>
        <input type="text" id="firstName" name="account_firstname" placeholder="Type here" value="<%= locals.account_firstname %>" required/>

        <label for="lastName">Last name</label>
        <input type="text" id="lastName" name="account_lastname" placeholder="Type here" value="<%= locals.account_lastname %>" required />

        <label for="email">Email</label>
        <input type="email" id="email" name="account_email" placeholder="Enter a valid email adrres" value="<%= locals.account_email %>" required/>

        <label for="password">Password</label>
        <div>The password must be: 
            <ul>
                <li>at least 12 characters</li>
                <li>contain at least 1 number, 1 capital letter and 1 special character</li>
            </ul>
        </div>
        <input type="password" id="password" name="account_password" placeholder="Type here" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s).{12,}$" required/>

        <button type="submit">Register</button> 
    </form>
</div> 