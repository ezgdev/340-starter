<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title><%= title %></title>
</head>
<body>
    <h1><%= title %></h1>

    <%- messages() %>

    <% if (errors) { %>
        <ul class="notice">
        <% errors.array().forEach(error => { %>
        <li>‚ùå <%= error.msg %></li>
        <%  }) %>
        </ul>
    <% } %>
    
    <form action="/inventory/add-classification" method="post" id="add-classification">

        <label>Classification Name</label>
        <div>Name must be alphabetic characters only</div>
        <input type="text" id="nameCar" name="classification_name" placeholder="Type here" required>

        <button type="submit">Add Classification</button>

    </form>
</body>
</html>
