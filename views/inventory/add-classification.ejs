
    <h1><%= title %></h1>

    <% if (message) { %>
        <div class="noticeMsg">❌ <%= message %></div>
    <% } %>

    <% if (errors) { %>
        <ul class="notice">
        <% errors.array().forEach(error => { %>
        <li>❌ <%= error.msg %></li>
        <%  }) %>
        </ul>
    <% } %>
    
    <form action="/inv/add-classification" method="post" id="add-classification">

        <label for="classification_name">Classification Name</label>
        <input type="text" id="classification_name" name="classification_name" placeholder="Alphabetic characters only" pattern="^[A-Za-z]+$" title="Only letters, no spaces or special characters." required>

        <button type="submit">Add Classification</button>

    </form>

